@model List<DPWA_Assessment.Models.ViewModel.JuegoViewModel>
@{
    ViewBag.Title = "Juegos";
}

<div class="d-flex justify-content-center align-items-center vh-100 container-fluid">
    <div>
        <h2 class="text-center text-dark mb-5 display-2">@ViewBag.Title</h2>
        <div class="text-end">
            <a href="~/Juego/InsertarJuego" class="btn shadow btn-sm btn-warning mb-1">Insertar Juego</a>
        </div>
        <div class="row">
            <div class="col-8 col-sm shadow overflow-auto p-1">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Id Juego</th>
                            <th>Imagen</th>
                            <th>Nombre Juego</th>
                            <th>Existencias</th>
                            <th>Precio</th>
                            <th>Categoría</th>

                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>
                                <img src=@item.Imagen class="img-fluid img-thumbnail" width="70" />
                            </td>
                            <td>@item.NombreJuego</td>
                            <td>@item.Existencias</td>
                            <td>$ @item.Precio</td>
                            <td>@item.Categoria</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>

