@model DPWA_Assessment.Models.ViewModel.ViewModel

@{
    ViewBag.Title = "Insertar Juego";
}

<div class="d-flex justify-content-center align-items-center vh-100 container-fluid">
    <div>
        <h2 class="text-center text-dark mb-5 display-2">@ViewBag.Title</h2>
        <div class="row">
            @using (Html.BeginForm("InsertarJuego", "Juego", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="shadow p-3">
                    <div class="mb-3">
                        @Html.LabelFor(d => d.NuevoJuego.NombreJuego, "Nombre", new { @class = "form-label" })
                        @Html.TextBoxFor(d => d.NuevoJuego.NombreJuego, "", new { @class = "form-control" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(d => d.NuevoJuego.Imagen, "Imagen", new { @class = "form-label" })
                        <input type="file" name="NuevoJuego.ImagePath" class="form-control" />
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(d => d.NuevoJuego.Precio, "Precio", new { @class = "form-label" })
                        @Html.TextBoxFor(d => d.NuevoJuego.Precio, "", new { @class = "form-control" })
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(d => d.NuevoJuego.Existencias, "Existencias", new { @class = "form-label" })
                        <input type="number" name="NuevoJuego.Existencias" class="form-control" min="0" max="50" />
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(d=> d.NuevoJuego.IdCategoria, "Categoria", new { @class = "form-label" }) 
                        <select class="form-select" name="NuevoJuego.IdCategoria">
                            <option selected>Selecciona una Categoría</option>
                            @foreach (var item in Model.Categorias)
                            {
                                <option value=@item.Id>@item.Categoria</option>
                            }
                        </select>
                    </div>
                    <div class="text-end mb-3">
                        <input type="submit" value="Guardar" class="btn btn-sm btn-warning" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>