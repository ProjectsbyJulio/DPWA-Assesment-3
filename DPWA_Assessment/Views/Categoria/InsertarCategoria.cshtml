@model DPWA_Assessment.Models.ViewModel.CategoriaViewModel
@{
    ViewBag.Title = "Insertar Categoria";
}

<div class="d-flex justify-content-center align-items-center vh-100 container-fluid">
    <div>
        <h2 class="text-center text-dark mb-5">@ViewBag.Title</h2>
        <div class="row">
            @using (Html.BeginForm("InsertarCategoria", "CategoriaController", FormMethod.Post))
            {
                <div class="col shadow p-3">
                    <div class="mb-3">
                        @Html.LabelFor(d => d.Categoria, "Nombre", new { @class = "form-label" })
                        @Html.TextBoxFor(d => d.Categoria, "", new { @class = "form-control" })
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(d => d.imagenCat, "Imagen", new { @class = "form-label" })
                        @Html.EditorFor(d => d.imagenCat, new { htmlAttributes = new { @class = "form-control", @type = "file" } })
                    </div>
                </div>
            }
        </div>
    </div>
</div>
