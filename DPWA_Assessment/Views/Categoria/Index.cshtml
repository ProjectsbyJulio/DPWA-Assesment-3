@model List<DPWA_Assessment.Models.ViewModel.CategoriaViewModel>
@{
    ViewBag.Title = "Categorías";
}

<h2 class="text-center text-dark">@ViewBag.Title</h2>

<section>
    <div class="row">
        <div class="col shadow">
            <table class="table table-hover table-sm">
                <thead class="table-light">
                    <tr>
                        <th>Id Categoría</th>
                        <th>Nombre</th>
                        <th>Imagen</th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Categoria</td>
                        <td>
                            <img src=@item.imagenCat class="img-fluid img-thumbnail" />
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</section>